import pandas as pd

data = {
    'Категорія': ['Фрукти', 'Овочі', 'Фрукти', 'Овочі', 'Фрукти'],
    'Продукт': ['Яблуко', 'Морква', 'Банан', 'Картопля', 'Апельсин'],
    'Ціна': [20, 15, 25, 10, 30],
    'Кількість': [100, 200, 150, 300, 80]
}

df = pd.DataFrame(data)

print("датафрейм:")
print(df)
aggregated_df = df.groupby('Категорія').agg({'Кількість': 'sum', 'Ціна': 'mean'}).reset_index()
print("\nАгреговані дані:")
print(aggregated_df)
