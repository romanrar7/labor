def func1ryad(sentence):
    words = sentence.split()
    count = 0
    for word in words:
        if word.lower().startswith('н'):
            count += 1
    return count

if __name__ == "__main__":
    input_sentence = input("введіть речення: ")
    result = func1ryad(input_sentence)
    print("кількість слів з 'н':", result)
